FROM docker-remote.artifacts.developer.gov.bc.ca/alpine:3.14
WORKDIR /src
COPY ["*", "./"]

RUN apk add --no-cache python3 py3-pip .build-deps python3-dev build-base openldap-dev python2-dev && \
    python3 -m pip install -r requirements.txt --no-cache-dir && \
    apk --purge del .build-deps

ENTRYPOINT ["python3", "access_ldap_test.py"]