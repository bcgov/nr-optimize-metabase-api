FROM docker-remote.artifacts.developer.gov.bc.ca/alpine:3.14
WORKDIR /src
COPY ["*", "./"]

RUN apk add --no-cache python3 py3-pip postgresql-libs && \
    apk add --no-cache --virtual .build-deps gcc python3-dev musl-dev gfortran postgresql-dev build-base py3-numpy && \
    apk add --no-cache openldap-dev python2-dev
    python3 -m pip install -r requirements.txt --no-cache-dir && \
    apk --purge del .build-deps

ENTRYPOINT ["python3", "send_usage_emails.py"]